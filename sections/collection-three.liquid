{%- capture section_style -%}
    {%- if section.settings.color_bg != 'rgba(0,0,0,0)' -%}
        background-color: {{ section.settings.color_bg }};
    {%- endif -%}
    {%- if section.settings.padding_block != blank -%}
        padding: {{section.settings.padding_block}};
    {%- endif -%}
    {%- if section.settings.margin_block != blank -%}
        margin: {{section.settings.margin_block}};
    {%- endif -%}
{%- endcapture -%}
<div class="vela-section collection-three overflow-hidden" {% if section_style%}style="{{ section_style }}"{% endif%}>
    <div class="container{% if section.settings.full_with %}-fluid{% endif %}">
        <div class="vela-section__inner">
            <div class="vela-section__content">
                <div class="row g-3 g-lg-5 align-items-center">
                    <div class="col-12 col-md-6">
                        <div class="row g-3 g-lg-5">
                            <div class="col-12">
                                <div class="ps-xl-5 position-relative">
                                    <label class="collection-three__caption caption-left text-uppercase position-absolute start-0 top-0">{{ section.settings.caption1 }}</label>
                                    <div class="collection-three__wrap collection-wrapper position-relative overflow-hidden ms-5">
                                            {%- assign proCollection1 = section.settings.collection_handle1 -%}
                                            <a class="collection-three__image collection-effect__image" href="{% if proCollection1 != blank %}{{ collections[proCollection1].url }}{% else %}#{% endif %}" title="{{ section.settings.title1 }}">
                                                {% if section.settings.single_images1 != blank %}
                                                    {% include 'img-global' with image: section.settings.single_images1 %}
                                                {% else %}
                                                    <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/580x620.jpg" />
                                                {% endif %}
                                            </a>
                                            <div class="collection-three__content position-absolute bottom-0 start-50 translate-middle-x mb-3 mb-sm-4 text-center">
                                                <a class="collection-three__title d-inline-block h3 mb-0 position-relative"  href="{% if proCollection1 != blank %}{{ collections[proCollection1].url }}{% else %}#{% endif %}" title="{{ section.settings.title1 }}">{{ section.settings.title1 }}</a>                                                          
                                                {%- if proCollection1 != blank -%}
                                                    {%- if collections[proCollection1].products_count != blank  -%}
                                                        {%- assign productCount = collections[proCollection1].products_count -%}
                                                    {%- else -%}
                                                        {%- assign productCount = 0 -%}
                                                    {%- endif -%}
                                                    {%- if section.settings.collection_count -%}
                                                        <p class="colCount mb-1">{% if productCount > 1 %}{{ 'collections.general.product_count.other' | t:product_count:productCount }}{% else %}{{ 'collections.general.product_count.one' | t:product_count:productCount }}{% endif %}</p>
                                                    {%- endif -%}
                                                {%- endif -%}
                                            </div>
                                        </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="ms-5 ps-xl-5">
                                    <div class="ps-xl-5 position-relative">
                                        <label class="collection-three__caption caption-left text-uppercase position-absolute start-0 top-0">{{ section.settings.caption2 }}</label>
                                        <div class="collection-three__wrap collection-wrapper position-relative overflow-hidden ms-5">
                                            {%- assign proCollection2 = section.settings.collection_handle2 -%}
                                            <a class="collection-three__image collection-effect__image" href="{% if proCollection2 != blank %}{{ collections[proCollection2].url }}{% else %}#{% endif %}" title="{{ section.settings.title2 }}">
                                                {% if section.settings.single_images2 != blank %}
                                                    {% include 'img-global' with image: section.settings.single_images2 %}
                                                {% else %}
                                                    <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/500x500.jpg" />
                                                {% endif %}
                                            </a>
                                            <div class="collection-three__content position-absolute bottom-0 start-50 translate-middle-x mb-3 mb-sm-4 text-center">
                                                <a class="collection-three__title d-inline-block h3 mb-0 position-relative" href="{% if proCollection2 != blank %}{{ collections[proCollection2].url }}{% else %}#{% endif %}" title="{{ section.settings.title2 }}">{{ section.settings.title2 }}</a>
                                                {%- if proCollection2 != blank -%}
                                                    {%- if collections[proCollection2].products_count != blank  -%}
                                                        {%- assign productCount = collections[proCollection2].products_count -%}
                                                    {%- else -%}
                                                        {%- assign productCount = 0 -%}
                                                    {%- endif -%}
                                                    {%- if section.settings.collection_count -%}
                                                        <p class="colCount mb-1">{% if productCount > 1 %}{{ 'collections.general.product_count.other' | t:product_count:productCount }}{% else %}{{ 'collections.general.product_count.one' | t:product_count:productCount }}{% endif %}</p>
                                                    {%- endif -%}
                                                {%- endif -%}
                                            </div>              
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="pe-xl-5 position-relative">
                            <label class="collection-three__caption caption-right text-uppercase position-absolute end-0 top-0">{{ section.settings.caption3 }}</label>
                            <div class="collection-three__wrap collection-wrapper collection-primary position-relative overflow-hidden me-5">
                                {%- assign proCollection3 = section.settings.collection_handle3 -%}
                                <a class="collection-three__image collection-effect__image" href="{% if proCollection3 != blank %}{{ collections[proCollection3].url }}{% else %}#{% endif %}" title="{{ section.settings.title3 }}">
                                    {% if section.settings.single_images3 != blank %}
                                        {% include 'img-global' with image: section.settings.single_images3 %}
                                    {% else %}
                                        <img class="img-fluid" alt="{{ shop.name }}" src="https://via.placeholder.com/580x850.jpg" />
                                    {% endif %}
                                </a>
                                <div class="collection-three__content position-absolute bottom-0 start-50 translate-middle-x mb-3 mb-sm-4 text-center">
                                    <a class="collection-three__title d-inline-block h3 mb-0 position-relative" href="{% if proCollection3 != blank %}{{ collections[proCollection3].url }}{% else %}#{% endif %}" title="{{ section.settings.title3 }}">{{ section.settings.title3 }}</a>
                                    {%- if proCollection3 != blank -%}
                                        {%- if collections[proCollection3].products_count != blank  -%}
                                            {%- assign productCount = collections[proCollection3].products_count -%}
                                        {%- else -%}
                                            {%- assign productCount = 0 -%}
                                        {%- endif -%}
                                        {%- if section.settings.collection_count -%}
                                            <p class="colCount mb-1">{% if productCount > 1 %}{{ 'collections.general.product_count.other' | t:product_count:productCount }}{% else %}{{ 'collections.general.product_count.one' | t:product_count:productCount }}{% endif %}</p>
                                        {%- endif -%}
                                    {%- endif -%}
                                </div>              
                            </div>
                        </div>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>
